<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_field :detail, class: 'form-control' %>
  </div>

  <%= f.submit "add task", class: 'btn btn-danger mt-2' %>
<% end %>
