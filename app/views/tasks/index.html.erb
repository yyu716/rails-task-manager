<div class="container">
<div class="d-flex justify-content-between align-items-center">

<h1>My tasks</h1>
<%= link_to '+', new_task_path, class: 'btn btn-primary'%>
</div>

<% @tasks.each do |task| %>
<div>
<p class="me-3"><%= link_to task.title, task_path(task) %></p>
<input type="checkbox" class="d-flex align-items-center">
</div>
<% end %>
